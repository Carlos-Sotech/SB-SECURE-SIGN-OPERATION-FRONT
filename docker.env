# ===== CONFIGURACIÓN DOCKER =====

# Configuración del Frontend
NODE_ENV=production
PORT=4200

# Configuración del Backend
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5073

# Base de Datos (descomenta y configura según tu base de datos)
# DB_CONNECTION_STRING=Server=postgres;Database=rutas;User Id=rutas_user;Password=your_password;Port=5432
# DB_PASSWORD=your_secure_password

# Configuración de Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Configuración de Red
NETWORK_NAME=rutas-network

# Configuración de Volúmenes
LOGS_DIR=./logs
TEMP_DIR=./temp-backend
DIST_DIR=./dist

# Configuración de Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Configuración de Restart
RESTART_POLICY=unless-stopped






